<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"

        android:elevation="40dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/news_data_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp">

                <ImageView
                    android:id="@+id/comp_news_image"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-1dp"
                    android:maxHeight="120dp"
                    android:maxWidth="120dp"
                    android:minHeight="120dp"
                    android:minWidth="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/comp_news_source"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="6 hours ago"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/comp_news_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comp_news_source"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Greenpeace, Crypto Billionaire Lobby to Change Bitcoin's Code"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comp_news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="150dp"
                    android:text="Yahoo"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>